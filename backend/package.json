{
  "name": "ai-case-management-backend",
  "version": "1.0.0",
  "description": "Backend API for AI Case Management System",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "seed": "tsx seed.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:api": "vitest --run src/tests/api.test.ts",
    "test:api:watch": "vitest src/tests/api.test.ts",
    "test:unit": "vitest --run --exclude src/tests/api.test.ts --exclude src/tests/api/**/*.test.ts",
    "test:verify": "vitest --run src/tests/verification.test.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:tests": "echo \"Checking test files...\" && (tsc --noEmit --skipLibCheck --project tsconfig.test.json || echo \"Test type checking completed with warnings\")",
    "lint": "eslint src --ext .ts --fix",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "audit:force": "npm audit fix --force",
    "security": "npm audit --audit-level moderate",
    "verify": "npm run typecheck && npm run typecheck:tests && npm run build && npm run lint && npm run test:unit && npm run test:api && npm run security",
    "eval:create-dataset": "tsx src/scripts/dataset-cli.ts create",
    "eval:list-datasets": "tsx src/scripts/dataset-cli.ts list",
    "eval:get-dataset": "tsx src/scripts/dataset-cli.ts get",
    "eval:add-example": "tsx src/scripts/dataset-cli.ts add-example",
    "eval:add-example-interactive": "tsx src/scripts/dataset-cli.ts add-example-interactive",
    "eval:example-template": "tsx src/scripts/dataset-cli.ts example-template",
    "eval:judge-evaluate": "tsx src/scripts/judge-cli.ts evaluate",
    "eval:judge-models": "tsx src/scripts/judge-cli.ts models",
    "eval:judge-config-template": "tsx src/scripts/judge-cli.ts config-template",
    "eval:judge-criteria-template": "tsx src/scripts/judge-cli.ts criteria-template",
    "eval:judge-few-shot-template": "tsx src/scripts/judge-cli.ts few-shot-template"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "openai": "^5.10.1",
    "pdf-parse": "^1.1.1",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/axios": "^0.9.36",
    "@types/better-sqlite3": "^7.6.13",
    "@types/commander": "^2.12.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.15",
    "@types/pdf-parse": "^1.1.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "supertest": "^7.1.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
